<Window x:Class="YSCertificateCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YSCertificateCheck"
        mc:Ignorable="d"
        Title="YSCertificateCheck" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Actions">
                <MenuItem Header="Check certificate" Name="CheckCertificateMenuItem" Click="CheckCertificateMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Close" Name="CloseMenuItem" Click="CloseMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="CC" BorderThickness="4" Margin="5,5,0,0"/>
    </DockPanel>
</Window>
