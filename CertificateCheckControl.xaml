<UserControl x:Class="YSCertificateCheck.CertificateCheckControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YSCertificateCheck"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Margin="5,5,5,5">URL:</Label>
            <TextBox x:Name="URL" Width="150" Margin="5,5,5,5"/>
            <Button x:Name="CheckButton" Margin="5,5,5,5" Cursor="Hand" Click="CheckButton_Click">Check</Button>
        </StackPanel>
        <ScrollViewer BorderThickness="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Top">
            <TextBox x:Name="CheckResult" Margin="5,5,5,5" AcceptsReturn="True"/>
        </ScrollViewer>
    </DockPanel>
    
</UserControl>
